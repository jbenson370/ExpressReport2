<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Spinner
        android:id="@+id/categoryMenu"
        android:layout_width="284dp"
        android:layout_height="48dp"
        android:layout_x="20dp"
        android:layout_y="20dp" />

    <Spinner
        android:id="@+id/currencyMenu"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_x="20dp"
        android:layout_y="83dp" />

    <EditText
        android:id="@+id/cost_txt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_x="127dp"
        android:layout_y="83dp"
        android:ems="10"
        android:hint="Cost"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/date_txt"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="155dp"
        android:ems="10"
        android:hint="Date of Purchase(mm/dd/yyyy)"
        android:inputType="date" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/itemDescription_txt"
        android:layout_width="284dp"
        android:layout_height="186dp"
        android:layout_x="20dp"
        android:layout_y="202dp"
        android:ems="10"
        android:gravity="center_vertical|top"
        android:hint="Item Description"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/saveItem_btn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_x="24dp"
        android:layout_y="401dp"
        android:text="@string/save_btn" />

    <Button
        android:id="@+id/cancelItem_btn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_x="222dp"
        android:layout_y="402dp"
        android:text="@string/cancel_btn" />

</AbsoluteLayout>
